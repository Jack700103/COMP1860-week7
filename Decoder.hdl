CHIP Decoder {
    IN in[4];
    OUT a, b, c, d, e, f, g;

    PARTS:
    // Instantiate the decoder for each segment.
    // Each sub-chip takes the same 4-bit input and outputs its specific segment signal.
    Decoder_a(in=in, out=a);
    Decoder_b(in=in, out=b);
    Decoder_c(in=in, out=c);
    Decoder_d(in=in, out=d);
    Decoder_e(in=in, out=e);
    Decoder_f(in=in, out=f);
    Decoder_g(in=in, out=g);
}